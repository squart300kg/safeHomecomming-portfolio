<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".citizen.Activity_Wait_for_request_guard_response">

    <TextView
        android:layout_gravity="center"
        android:layout_marginBottom="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:background="@color/white"
        android:paddingHorizontal="15dp"
        android:text="잠시만 기다려 주세요"
        android:textColor="@color/black"
        android:textSize="20dp"
        />
    <!--android:text="안심 귀가를 요청 중입니다\n\n잠시만 기다려 주세요"-->

    <LinearLayout
        android:layout_gravity="bottom"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_gravity="center"
                android:id="@+id/Lottie_Intro"
                android:layout_width="match_parent"
                android:layout_height="411.1dp"
                app:lottie_autoPlay="true"
                app:lottie_fileName="mild-waves.json"
                app:lottie_loop="true" />

            <TextView
                android:layout_gravity="bottom"
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:text="내 주변 안심 귀가 도우미를 탐색중..."
                android:textColor="@color/white"
                android:textSize="15dp"
                />

        </FrameLayout>


        <View
            android:background="@color/gray"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"/>



        <TextView
            android:id="@+id/button_cancel_request_safe_guard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:background="@color/white"
            android:paddingHorizontal="15dp"
            android:text="요청 취소"
            android:textColor="@color/black"
            android:textSize="20dp"
            />

    </LinearLayout>

</FrameLayout>