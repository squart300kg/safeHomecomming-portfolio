<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".citizen.Activity_safeGuard_Call_Request">

    <!--타이틀바-->
    <LinearLayout
        android:id="@+id/fra_mypage_title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center"
            android:paddingHorizontal="15dp"
            android:text="도우미 호출 조건"
            android:textColor="@color/black"
            android:textSize="20dp"/>

    </LinearLayout>

    <View
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"/>

    <TextView
        android:layout_marginHorizontal="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:text="현재 위치"
        android:textColor="@color/gray"
        android:textSize="20dp" />

    <TextView
        android:layout_marginHorizontal="15dp"
        android:id="@+id/guard_request_address_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:hint="(클릭) 주소검색"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:layout_marginHorizontal="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:text="목적지"
        android:textColor="@color/gray"
        android:textSize="20dp" />

    <TextView
        android:layout_marginHorizontal="15dp"
        android:id="@+id/guard_request_address_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:hint="(클릭) 주소검색"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:textColor="@color/black"
        android:textSize="20dp" />


    <TextView
        android:layout_marginHorizontal="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:text="안심 귀가 도우미 성별"
        android:textColor="@color/gray"
        android:textSize="20dp" />

    <RadioGroup
        android:layout_marginHorizontal="30dp"
        android:layout_weight="1"
        android:id="@+id/guard_request_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:checked="true"
            android:id="@+id/guard_request_radio_button_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:paddingRight="10dp"
            android:text="상관 없어요"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/guard_request_radio_button_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="남성"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/guard_request_radio_button_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="여성"
            android:textColor="@color/black"
            android:textSize="20dp" />

    </RadioGroup>
    
    <View
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"/>

    <TextView
        android:id="@+id/button_request_safe_guard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:background="@color/white"
        android:paddingHorizontal="15dp"
        android:text="안심 귀가 요청하기"
        android:textColor="@color/black"
        android:textSize="20dp"
        />

</LinearLayout>